<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DBD_Lobby_Info">

    <Viewbox x:Key="WindowClose" x:Shared="False" Width="10.000" Height="10.000">
        <Path 
            Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" 
            Data=" M 10.000,0.576 L 5.583,5.000 L 10.000,9.424 L 9.424,10.000 L 5.000,5.583 L 0.576,10.000 L 0.000,9.424 L 4.417,5.000 L 0.000,0.576 L 0.576,0.000 L 5.000,4.417 L 9.424,0.000 L 10.000,0.576 Z"/>
    </Viewbox>

    <Viewbox x:Key="WindowMaximize" x:Shared="False" Width="10.000" Height="10.000">
        <Path 
            StrokeThickness="1.0" 
            Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}" 
            StrokeMiterLimit="1.0" 
            Data="F1 M 0.500,0.500 L 9.500,0.500 L 9.500,9.500 L 0.500,9.500 L 0.500,0.500 Z"/>
    </Viewbox>

    <Viewbox x:Key="WindowMinimize" x:Shared="False" Width="10.000" Height="1.000">
        <Path 
            Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"  
            Data="F1 M 0.000,0.000 L 10.000,0.000 L 10.000,1.000 L 0.000,1.000 L 0.000,0.000 Z" />
    </Viewbox>

</ResourceDictionary>